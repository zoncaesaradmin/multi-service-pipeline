# Environment Configuration for Local Development
# Copy this file to .env and modify values as needed
# Production deployments should set these variables directly in Docker/K8s

# =============================================================================
# Test Scenarios Configuration
# =============================================================================
KEEP_REPORT_SERVER=true
PARALLEL_EXECUTION=true
MAX_PARALLEL_GROUPS=2
TEST_CONCURRENCY=1
FEATURES=features/basic_tests.feature,features/one_to_one_tests.feature
#FEATURES=features/scale_tests_1.feature,features/scale_tests_2.feature,features/scale_tests_3_worstlookup.feature
#FEATURE_LIST_FILE=features/execlist

# =============================================================================
# Core Application Settings
# =============================================================================
HOSTNAME=localmachine
SERVICE_HOME=/path/to/root/directory
APP_ENV=local
APP_NAME=cratos
APP_VERSION=1.0.0

# =============================================================================
# Kafka Topics
# =============================================================================
PROCESSING_INPUT_TOPIC=cisco_nir-anomalies
PROCESSING_RULES_TOPIC=cisco_nir-alertRules
PROCESSING_RULE_TASKS_TOPIC=cisco_nir-ruletasks
PROCESSING_OUTPUT_TOPIC=cisco_nir-prealerts

# =============================================================================
# Server Configuration
# =============================================================================
SERVER_HOST=localhost
SERVER_PORT=4477
SERVER_READ_TIMEOUT=30
SERVER_WRITE_TIMEOUT=30

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout
LOG_FILE_NAME=main.log
SERVICE_LOG_DIR="$SERVICE_HOME/test/results/logs"

# =============================================================================
# Database Configuration (if applicable)
# =============================================================================
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=cratos
# DB_USER=postgres
# DB_PASSWORD=password
# DB_SSL_MODE=disable

# =============================================================================
# Processing Configuration
# =============================================================================
PROCESSING_BATCH_SIZE=100
PROCESSING_TIMEOUT=30
PROCESSING_WORKERS=4

# =============================================================================
# External Services Configuration
# =============================================================================
# API_BASE_URL=https://api.example.com
# API_KEY=your-api-key
# API_TIMEOUT=30

# =============================================================================
# Monitoring and Observability
# =============================================================================
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health

# =============================================================================
# Development/Debug Settings
# =============================================================================
DEBUG_MODE=true
ENABLE_PPROF=false
PPROF_PORT=6060
