# Environment Configuration for Local Development
# Copy this file to .env and modify values as needed
# Production deployments should set these variables directly in Docker/K8s

# =============================================================================
# Core Application Settings
# =============================================================================
HOSTNAME=localmachine
SERVICE_HOME=/path/to/root/directory
APP_ENV=local
APP_NAME=cratos
APP_VERSION=1.0.0

# =============================================================================
# Server Configuration
# =============================================================================
SERVER_HOST=localhost
SERVER_PORT=8080
SERVER_READ_TIMEOUT=30
SERVER_WRITE_TIMEOUT=30

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout
LOG_FILE_NAME=main.log
SERVICE_LOG_DIR="$SERVICE_HOME/test/results/logs"

# =============================================================================
# Database Configuration (if applicable)
# =============================================================================
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=cratos
# DB_USER=postgres
# DB_PASSWORD=password
# DB_SSL_MODE=disable

# =============================================================================
# Kafka Configuration (for production Kafka mode)
# =============================================================================
KAFKA_BROKERS=localhost:9092
KAFKA_CONSUMER_GROUP=cratos-consumer-group
KAFKA_CONSUMER_TOPICS=input-topic,events-topic
KAFKA_PRODUCER_TOPIC=output-topic
KAFKA_SECURITY_PROTOCOL=PLAINTEXT
KAFKA_SASL_MECHANISM=PLAIN
KAFKA_SASL_USERNAME=
KAFKA_SASL_PASSWORD=

# =============================================================================
# Message Bus Configuration
# =============================================================================
# Options: local, kafka
MESSAGE_BUS_TYPE=local

# =============================================================================
# Processing Configuration
# =============================================================================
PROCESSING_BATCH_SIZE=100
PROCESSING_TIMEOUT=30
PROCESSING_WORKERS=4

# =============================================================================
# External Services Configuration
# =============================================================================
# API_BASE_URL=https://api.example.com
# API_KEY=your-api-key
# API_TIMEOUT=30

# =============================================================================
# Monitoring and Observability
# =============================================================================
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health

# =============================================================================
# Development/Debug Settings
# =============================================================================
DEBUG_MODE=true
ENABLE_PPROF=false
PPROF_PORT=6060
